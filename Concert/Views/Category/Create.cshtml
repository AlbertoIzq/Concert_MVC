@using ConcertWeb.Models;
<!-- It creates a new Category object -->
@model Category

<form method="post">
    <div class="border p-3 mt-4">
        <div class="row">
            <h2 class="">Create Category</h2>
            <hr />
        </div>
        <div class="row mb-2 p-1">
            <label class="p-0">Category Name</label>
            <input type="text" class="form-control" />
        </div>
        <div class="row mb-3 p-1">
            <label class="p-0">Display Order</label>
            <input type="text" class="form-control" />
        </div>
        <div class="row">
            <div class="col-6 col-md-3">
                <button type="submit" class="btn btn-primary form-control">Create</button>
            </div>
            <div class="col-6 col-md-3">
                <a asp-controller="Category" asp-action="Index" class="btn btn-outline-secondary border form-control">
                    Back to List
                </a>
            </div>
        </div>
        
        
    </div>
</form>