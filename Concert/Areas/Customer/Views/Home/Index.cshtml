@model IEnumerable<Song>

<div class="row pb-3 mb-5">
    @foreach(var song in Model)
    {
        <div class="col-sm-6 col-lg-4 col-xl-3">
            <div class="row p-2">
                <div class="col-12 p-1">
                    <div class="card border-0 p-2 shadow border-top border-5 rounded">
                        @if(song.SongImages != null && song.SongImages.Count() > 0)
                        {
                            <img src="@song.SongImages.FirstOrDefault().ImageUrl" class="card-img-top rounded" />
                        }
                        else
                        {
                            // Used to display a fake image
                            <img src="https://placehold.co/500x600/png" class="card-img-top rounderd" />
                        }
                        <div class="card-body pb-0">
                            <div class="pl-1">
                                <p class="card-title h6 text-dark opacity-75 text-uppercase text-center">@song.Title</p>
                                <p class="card-title h6 text-dark opacity-75 text-center"><b>@song.Artist</b></p>
                            </div>
                            <div class="row pl-1">
                                <div class="col-8">
                                    <p class="text-dark text-opacity-75 text-start"><em>@song.Genre.Name</em></p>
                                </div>
                                <div class="col-4">
                                    <p class="text-dark text-opacity-75 text-end"><em>@song.Language.Name</em></p>
                                </div>
                            </div>
                        </div>
                        <div>
                            <a asp-area="Customer" asp-controller="Home" asp-action="Details" asp-route-songId="@song.Id" class="btn btn-primary bg-gradient border-0 form-control">Details</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
</div>

