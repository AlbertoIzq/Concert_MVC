@model RoleManagementVM

<div class="card shadow border-0 my-4">
    <div class="card-header bg-secondary bg-gradient ml-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2">Manage User Role</h2>
            </div>
        </div>
    </div>
    <div class="card-body p-4">
        <form method="post" class="row" enctype="multipart/form-data">
            <input asp-for="ApplicationUser.Id" hidden />
            <div class="row border p-3">
                <div class="form-floating py-2 col-12">
                    <input asp-for="ApplicationUser.Name" disable class="form-control border-0 shadow" />
                    <label asp-for="ApplicationUser.Name" class="ms-2"></label>
                    <span asp-validation-for="ApplicationUser.Name" class="text-danger"></span>
                </div>
                <div class="form-floating py-2 col-12">
                    <select asp-for="ApplicationUser.Role" asp-items=@Model.RoleList class="form-select border-0 shadow">
                        <option disable selected>--Select Role--</option>
                    </select>
                    <label asp-for="ApplicationUser.Role" class="ms-2"></label>
                    <span asp-validation-for="ApplicationUser.Role" class="text-danger"></span>
                </div>
                <div id="ApplicationUser_CompanyId_div" style="display:none;" class="form-floating py-2 col-12">
                    <select asp-for="ApplicationUser.CompanyId" asp-items=@Model.CompanyList class="form-select border-0 shadow">
                        <option disable selected>--Select Company--</option>
                    </select>
                    <label asp-for="ApplicationUser.CompanyId" class="ms-2"></label>
                    <span asp-validation-for="ApplicationUser.CompanyId" class="text-danger"></span>
                </div>
                <div class="row pt-2">
                    <div class="col-6 col-md-3">
                        <button type="submit" class="btn btn-primary form-control">Update</button>
                    </div>
                    <div class="col-6 col-md-3">
                        <a asp-area="Admin" asp-controller="User" asp-action="Index" class="btn btn-outline-secondary border form-control">
                            Back to List
                        </a>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        $(document).ready(function () {
            $('#ApplicationUser_Role').change(function () {
                var selection = $('#ApplicationUser_Role Option:Selected').text();
                if (selection == 'Company') {
                    $('#ApplicationUser_CompanyId_div').show();
                }
                else {
                    $('#ApplicationUser_CompanyId_div').hide();
                }
            })
        })
    </script>
}