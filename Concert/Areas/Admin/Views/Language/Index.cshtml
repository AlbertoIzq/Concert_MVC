@model List<Language>

<div class="card shadow border-0 my-4">
    <div class="card-header bg-secondary bg-gradient ml-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2">Language List</h2>
            </div>
        </div>
    </div>
    <div class="card-body p-4">
        <div class="row pb-4">
            <div class="col-12 text-end">
                <a asp-area="Admin" asp-controller="Language" asp-action="Create" class="btn btn-primary">
                    <i class="bi bi-plus-square"></i> Create new Language
                </a>
            </div>
        </div>
        <!-- Table -->
        <table class="table table-bordered table-striped">
            <thead>
                <tr>
                    <th>
                        Language
                    </th>
                    <th>
                        Display Order
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var language in Model.OrderBy(u => u.DisplayOrder))
                {
                    <tr>
                        <td>@language.Name</td>
                        <td>@language.DisplayOrder</td>
                        <td>
                            <div class="w-50 btn-group" role="group">
                                <a asp-area="Admin" asp-controller="Language" asp-action="Edit" asp-route-id="@language.Id" class="btn btn-primary mx-1">
                                    <i class="bi bi-pencil-square"></i> Edit
                                </a>
                                <a asp-area="Admin" asp-controller="Language" asp-action="Delete" asp-route-id="@language.Id" class="btn btn-danger mx-1">
                                    <i class="bi bi-trash3"></i> Delete
                                </a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>