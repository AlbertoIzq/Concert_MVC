@model Service

<div class="card shadow border-0 my-4">
    <div class="card-header bg-secondary bg-gradient ml-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2">@((Model.Id != 0 ? "Update" : "Create")) Service</h2>
            </div>
        </div>
    </div>
    <div class="card-body p-4">
        <form method="post" class="row">
            <input asp-for="Id" hidden />
            <div class="row border p-3">
                <div class="form-floating py-2 col-12">
                    <input asp-for="Name" class="form-control border-0 shadow" />
                    <label asp-for="Name" class="ms-2"></label>
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="py-2 col-12">
                    <label asp-for="Description" class="ms-2 text-muted"></label>
                    <textarea asp-for="Description" class="form-control border-0 shadow"></textarea>
                </div>
                <div class="form-floating py-2 col-6">
                    <input asp-for="PriceFixed" class="form-control border-0 shadow" />
                    <label asp-for="PriceFixed" class="ms-2"></label>
                    <span asp-validation-for="PriceFixed" class="text-danger"></span>
                </div>
                <div class="form-floating py-2 col-6">
                    <input asp-for="PricePerSong" class="form-control border-0 shadow" />
                    <label asp-for="PricePerSong" class="ms-2"></label>
                    <span asp-validation-for="PricePerSong" class="text-danger"></span>
                </div>
                <div class="row pt-2">
                    <div class="col-6 col-md-3">
                        @{
                            string butonText = Model.Id != 0 ? "Update" : "Create";
                        }
                        <button type="submit" class="btn btn-primary form-control">@butonText</button>
                    </div>
                    <div class="col-6 col-md-3">
                        <a asp-area="Admin" asp-controller="Service" asp-action="Index" class="btn btn-outline-secondary border form-control">
                            Back to List
                        </a>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <script>
        tinymce.init({
            selector: 'textarea',
            height: 200,
            plugins: 'anchor autolink charmap emoticons lists visualblocks wordcount',
            toolbar: 'undo redo | blocks fontfamily fontsize | bold italic underline strikethrough |  align lineheight | numlist bullist indent outdent',
        });
    </script>
    @{
        <partial name="_ValidationScriptsPartial" />

    }
}