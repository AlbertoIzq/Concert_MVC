@page
@model ConcertRazor.Pages.Categories.IndexModel

<div class="container">
    <div class="row pt-2 pb-3">
        <div class="col-6">
            <h2 class="text-primary">
                Category List
            </h2>
        </div>
        <div class="col-6 text-end">
            <a asp-page="category/create" class="btn btn-primary">
                <i class="bi bi-plus-square"></i> Create new Category
            </a>
        </div>
    </div>
    <!-- Table -->
    <table class="table table-bordered table-striped">
        <thead>
            <tr>
                <th>
                    Category Name
                </th>
                <th>
                    Display Order
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var obj in Model.CategoryList.OrderBy(u => u.DisplayOrder))
            {
                <tr>
                    <td>@obj.Name</td>
                    <td>@obj.DisplayOrder</td>
                    <td>
                        <div class="w-50 btn-group" role="group">
                            <a asp-page="category/edit" asp-route-id="@obj.Id" class="btn btn-primary mx-1">
                                <i class="bi bi-pencil-square"></i> Edit
                            </a>
                            <a asp-page="category/delete" asp-route-id="@obj.Id" class="btn btn-danger mx-1">
                                <i class="bi bi-trash3"></i> Delete
                            </a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>